@model PortfolioWebsite.Models.Project

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageTitle = Model.Title;
}

<h1>@Model.Title</h1>
<p>@Model.Description</p>
@if (@Model.Images.Count > 0)
{
        <ul>
            @foreach (var image in @Model.Images)
            {
                <li class="detail-image">
                    <img src="@Url.Content(image)">
                </li>
            }
        </ul>
}

<button type="submit">@Html.ActionLink("Edit Project", "Edit", new { id = Model.Id })</button>
<button type="submit">@Html.ActionLink("Delete Project", "Remove", new { id = Model.Id })</button>