@model PortfolioWebsite.Models.Project

@{
    ViewBag.Title = "New Project";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Add", "Projects", FormMethod.Post, new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.Label("Project Title", new { @class = "control-label" })
    <p>Project Title</p>
    @Html.TextBox("Project Title", null, new { @class = "form-control" })

    @Html.Label("Description", new { @class = "control-label" })
    <p>Description</p>
    @Html.TextArea("Description", null, 14, 20, new { @class = "form-control" })

    <p>Cover Image</p>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.LabelFor(model => model.Images[0], new { @class = "control-label" })
    <input type="file" name="CoverImageFile" required />

    <button type="submit">Save</button>
    <a href="@Url.Action("Index")">Cancel</a>
}